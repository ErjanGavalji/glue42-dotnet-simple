<Window x:Class="ClientPortfolio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientPortfolio"
        mc:Ignorable="d"
        Title="Client Portfolio" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="lbCustomers" HorizontalAlignment="Left" Height="252" Margin="48,89,0,0" VerticalAlignment="Top" Width="164" DisplayMemberPath="Name" SelectionChanged="LbCustomers_SelectionChanged">
        </ListBox>
        <Label x:Name="lblCustomers" Content="Customers" HorizontalAlignment="Left" Margin="48,58,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="lbPortfolio" HorizontalAlignment="Left" Height="252" Margin="327,89,0,0" VerticalAlignment="Top" Width="164" DisplayMemberPath="Code" />
        <Label x:Name="lblPortfolio" Content="Portfolio" HorizontalAlignment="Left" Margin="327,58,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
